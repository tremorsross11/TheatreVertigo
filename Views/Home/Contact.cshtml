@{
    ViewBag.Title = "Contact";
}

<style>
    .body-content 
    {
        width: 100vw;
        margin: 0;
        padding: 0;
        max-width: 100vw;
    }
</style>

@*//Title*@
<h1 class="home-contact--heading1">Contact Us</h1>

@*//FORM FOR THE CONTACT PAGE*@
<div class="home-contact--contactContainer">

    @*//SUB HEADING THIS SHOULD BE CENTERED WHEN CSS IS ADDED*@
    <h4 class="home-contact--h4">GET IN TOUCH</h4>

    @*Columns to help with the styling*@
    <div class="home-contact--row">
        <div class="home-contact--column">

            <form class="home-contact--form">
                <div>
                    <label>First &#38; Last Name *</label>
                    <input type="text" />
                </div>

                <div>
                    <label>Email Address *</label>
                    <input type="text" />
                </div>

                <div>
                    <label>Subject *</label>
                    <input type="text" />
                </div>

                @*MESSAGE BOX AT THE END OF THE FORM*@
                <div>
                    <label>Message *</label>
                    <textarea rows="5" cols="50">  </textarea>
                </div>


                @*SUBMIT BUTTON*@
                <button type="submit">Submit</button>
            </form>

            @*END OF FORM FOR CONTACT PAGE*@
        </div>


        <div class="home-contact--column">
            @*DONATE SECTION. PUT THESE IN CONTAINERS*@
            <div home-contact--container2>
                <h5>DONATE</h5>
                <p>
                    We've got a Patreon account! <br />
                    Help support live theatre in <br />
                    Portland OR, by becoming a <br />
                    Patron today!
                </p>
                <button type="button">Donate</button>
                @*END OF DONATE SECTION*@


                @*VOLUNTEER SECTION ALSO IN A CONTAINER*@
                <h5>VOLUNTEER</h5>
                <p>
                    If you would like to volunteer please <br />
                    fill out the form!
                </p>
                <button type="button">VOLUNTEER</button>

            </div>
        </div>
    </div>

</div>